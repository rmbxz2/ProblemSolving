<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>leagues</display-name>
    <description>
        This is a simple web application with a source code organization
        based on the recommendations of the Application Developer's Guide.
    </description>

    <listener>
	<description>  load all leagues in file leagues.txt	</description>
	<listener-class>webServlet.util.InitilizedLeagues</listener-class>
    </listener>

    <context-param>
	<param-name>leagueFile</param-name>
	<param-value>/WEB-INF/data/leagues.txt</param-value>
    </context-param>

    <servlet>
        <servlet-name>list leagues</servlet-name>
	<jsp-file>/html/listLeagues.jsp</jsp-file>
        <!-- <servlet-class>package.class</servlet-class> -->
    </servlet>
    <servlet-mapping>
        <servlet-name>list leagues</servlet-name>
        <url-pattern>/html/listLeagues.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add league</servlet-name>
        <!-- <servlet-class>package.class</servlet-class> -->
	<jsp-file>/html/addLeague.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>add league</servlet-name>
        <url-pattern>/html/addLeague.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>success league</servlet-name>
        <!-- <servlet-class>package.class</servlet-class> -->
	<jsp-file>/html/succeedLeague.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>success league</servlet-name>
        <url-pattern>/html/succeedLeague.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>servletFront</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
	<init-param>
	    <param-name>config</param-name>
	    <param-value>/WEB-INF/struts-config.xml</param-value>
	</init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletFront</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

</web-app>


