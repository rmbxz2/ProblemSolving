<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xmlns:mvc="http://www.springframework.org/schema/mvc" xsi:schemaLocation="  
            http://www.springframework.org/schema/beans  
            http://www.springframework.org/schema/beans/spring-beans.xsd  
            http://www.springframework.org/schema/context  
            http://www.springframework.org/schema/context/spring-context.xsd  
            http://www.springframework.org/schema/mvc  
            http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<!-- enable annotation  -->
	<context:annotation-config />
	<!-- bean definitions go here -->


	<bean id="emp1" class="spring.model.Employee" scope="prototype">
		<property name="id" value="1"></property>
		<property name="name" value="ahmad"></property>
		<property name="salary" value="100"></property>
	</bean>

	<bean id="emp2" class="spring.model.Employee">
		<property name="id" value="2"></property>
		<property name="name" value="ali"></property>
		<property name="salary" value="200"></property>
	</bean>

	<!-- autowired by name-->
	<bean id="empAutoWiredByName" class="spring.model.Employee" autowire="byName"></bean>

	<!-- autowired by Type-->
	<bean id="empAutoWiredByType" class="spring.model.Employee" autowire="byType"></bean>

	<!-- autowired by constructor-->
	<bean id="empAutoWiredByConstructor" class="spring.model.Employee" autowire="constructor"></bean>


</beans>  
