<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">

	<display-name>web03</display-name>
	<description>This is a simple web application with a source code
  organization based on the recommendations of the Application
  Developer's Guide.</description>
	<listener>
		<description>load all leagues in file leagues.txt</description>
		<listener-class>
    webServlet.util.InitilizedLeagues</listener-class>
	</listener>
	<context-param>
		<param-name>leagueFile</param-name>
		<param-value>/WEB-INF/data/leagues.txt</param-value>
	</context-param>
	<servlet>
		<servlet-name>list leagues</servlet-name>
		<jsp-file>/User/pages/listLeagues.jsp</jsp-file>
		<!-- <servlet-class>package.class</servlet-class> -->
	</servlet>
	<servlet-mapping>
		<servlet-name>list leagues</servlet-name>
		<url-pattern>/User/pages/listLeagues.html</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>add league</servlet-name>
		<!-- <servlet-class>package.class</servlet-class> -->
		<jsp-file>/User/pages/addLeague.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>add league</servlet-name>
		<url-pattern>/User/pages/addLeague.html</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>success league</servlet-name>
		<!-- <servlet-class>package.class</servlet-class> -->
		<!-- /home/myLSP/lspWorkspace/web03/WebContent/User/pages/succeedLeague.jsp -->
		<jsp-file>/User/pages/succeedLeague.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>success league</servlet-name>
		<url-pattern>/User/pages/succeedLeague.html</url-pattern>
	</servlet-mapping>
	<!-- struts 2  filter will execute before any servlet  -->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
